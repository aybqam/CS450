<script>
    document.getElementById("show-colors-btn").addEventListener("click", function() {
        var container = document.getElementById("green-black-container");
        if (container.style.display === "none") {
            container.style.display = "block";
            document.getElementById("show-colors-btn").textContent = "Hide Colors";
        } else {
            container.style.display = "none";
            document.getElementById("show-colors-btn").textContent = "Show More Colors";
        }
    });
</script>         
